									.table-head-el Поставщик/производитель
									.table-head-el фасовка/упаковка
									.table-head-el Комментарии
								.table-body
									- for (var i = 0; i < 8; i++)
										.table-body-row

											.table-body-el-name Ключевая продукция
												+icon("arrow-down","icon")
