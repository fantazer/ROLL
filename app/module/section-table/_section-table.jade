mixin section-table()
	//block section-table
	.section.section-table
		.section-filter
		.section-table-wrap
			.section-table-header
				.main-cont 
					.section-table-header-cont
						.section-table__titile Таблица для участия в тендере
						.tender
							.tender-head
								.tender-head-el
									.tender-head-title *название компании
									.tender-input
										input(type="text")
								.tender-head-el
									.tender-head-title *контактная информация
									.tender-input
										input(type="text")
						
							
