.top-wrap
	position fixed 
	z-index 100
	top 0
	left 0
	width 100%
.header-cont
	+below(1200px)
		padding 10px
	padding 20px
	background white 
	box-shadow 0px 1px 2px #ccc9c9
//.main-cont
.header
	flex(between)
.header-inf
	flex(mid)
.header-inf-logo
	+below(1200px)
		width 100px
	margin-right 20px
.header-town
	+below(1200px)
		display none
.header-town-link
	color red
	text-decoration underline
.header-contact
	+below(1200px)
		display none
	flex(between)
.header-contact-inf
	flex(mid)
	font-family Roboto
	font-size 16px
	font-weight bold
	text-transform uppercase
	.icon
		margin 0 20px
		size 15px
		fill #c0c0c0
//.header-contact-inf-text
.header-contact-inf-numb
	margin-right 20px
.header-contact-get
	@extend .btn
.menu
	position relative
.menu-filter
	position absolute
	width 100%
	top 0
	left 0
	width 100%
	height 100%
	background-color rgba(0, 0, 0, 0)
	background-image linear-gradient(180deg, #000000 0%, rgba(0, 0, 0, 0) 100%)
	opacity 0.5
.menu-wrap
	+below(1200px)
		flex(mid)
		margin-right 0
	f()
	justify-content flex-end
	margin-right 12%
.menu-el
	+below(768px)
		padding 5px
		font-size 10px
	padding 15px 20px
	text-shadow 0 4px 57px rgba(0, 0, 0, 0.2)
	color #ffffff
	font-family Roboto
	font-size 16px
	font-weight bold
	line-height 25px
	text-transform uppercase
	z-index 10
	tr(all)
	&:hover
		background rgba(255, 255, 255, 0.4) 
.menu-el--active
	background rgba(255, 255, 255, 0.4) 
.header-menu-togl
	flex(mid)
	+above(1200px)
		display none
	.icon
		size 20px