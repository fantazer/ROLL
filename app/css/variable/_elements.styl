.all-page__title
	font-size 14px
	color black
.fp-tableCell
	+below(768px)
		height auto !important
.section
	+below(1200px)
		height auto !important
	+below(768px)
		min-height 50vh
	width 100%
	height 100vh
	background grey
	position relative
.section-filter
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	background black
	opacity .4 
/*.global
	min-width 1280px*/
.global-filter
	width 100%
	height 100vh
	background rgba(10, 10, 10, 0.58)
	position fixed
	top 0
	left 0
	z-index 160
	display none
.global-filter-open
	display block

.menu-cont__el
	+below(1200px)
		margin-bottom 10px
	margin-bottom 10%
.menu-cont__title
	+below(1200px)
		font-size 14px
		text-align center
		padding 0px
		margin-bottom 10px
		background white
		color black
		font-weight bold  
	color #ffffff
	font-family Roboto
	font-size 1.5vw
	line-height 28px
	background orange 
	padding 10px 20px
	margin-bottom 20px
.menu-cont__info
	+below(1200px)
		text-align center
	padding-left 10px

.owl-next,.owl-prev
	position absolute
	top 50%
	margin-top -30px
	color white
	font-size 40px
.owl-carousel
	position relative
.owl-prev
	+below(1440px)
		left 2%
	left -2%
.owl-next
	+below(1440px)
		right 2%
	right -2%
.slider-control
	+below(768px)
		size 20
	size 40
	fill grey
.owl-dots
	width 100%
	flex(mid)
	margin-top -40px
	position relative
	z-index 2000
.owl-dot
	round()
	margin 5px
	width 10px
	height 10px
	background white
.owl-dot.active
	background #322f40